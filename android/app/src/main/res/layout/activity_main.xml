<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/outputText" android:scrollbars="vertical"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/servingButton"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:visibility="visible"
            android:scrollHorizontally="false" android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:gravity="bottom"
            android:scrollbarAlwaysDrawVerticalTrack="true"/>
    <TextView
            android:text="Port:  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/portInput" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="81dp"
            android:layout_height="39dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/portInput"
            android:text="6000" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="30dp"
            app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>
    <Button
            android:text="Directory:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/directoryButton" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/portInput"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/directoryText"
            tools:text="/sdcard "
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/directoryButton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:layout_marginTop="14dp"
            app:layout_constraintTop_toTopOf="@+id/directoryButton"/>
    <ToggleButton
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:id="@+id/tlsButton" android:textOff="http"
            android:textOn="https"
            app:layout_constraintTop_toTopOf="@+id/servingButton"
            app:layout_constraintStart_toEndOf="@+id/servingButton"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/uploadsButton"/>
    <TextView
            android:text="Prefix:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/prefixInput" android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp" app:layout_constraintStart_toEndOf="@+id/portInput"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/prefixInput"
            app:layout_constraintTop_toTopOf="@+id/portInput" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
    <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:id="@+id/barrier" app:barrierDirection="left"/>
    <ToggleButton
            android:text="ToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/servingButton" android:textOff="OFF"
            android:textOn="ON"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/directoryText" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/tlsButton"/>
    <android.support.constraint.Constraints android:layout_width="wrap_content" android:layout_height="wrap_content"
                                            android:id="@+id/constraints"/>
    <ToggleButton
            android:text="ToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uploadsButton" android:textOff="No Uploads"
            android:textOn="Uploads On"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintTop_toTopOf="@+id/servingButton" app:layout_constraintStart_toEndOf="@+id/tlsButton"
            app:layout_constraintHorizontal_bias="0.5"/>
</android.support.constraint.ConstraintLayout>